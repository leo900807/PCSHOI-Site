<% layout("layout/application.ejs") -%>

<div class="col-12 col-sm-12 col-md-8 col-lg-4 mx-auto registration-settings-card">
    <div class="card">
        <div class="card-body mt-3 mb-3 ms-5 me-5">
            <div class="page-header mb-4 text-center">
                <h4 class="fw-bold mb-4">Registration settings</h4>
            </div>
            <form class="mb-2" method="post" action="/register/settings" onsubmit="return checkForm();">
                <input id="csrf-token" name="_csrf" value="<%= csrfToken %>" type="hidden" />
                <div class="form-group mb-3">
                    <label class="form-label" for="yearofcontest">Year of contest</label>
                    <input id="yearofcontest" class="form-control" name="yearofcontest" value="<%= yearOfContest %>" data-required="Year of contest is required" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="registerstart">Register start</label>
                    <input id="registerstart" class="form-control" name="registerstart" type="datetime-local" value="<%= registerStart %>" data-required="Register start is required" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="registerend">Register end</label>
                    <input id="registerend" class="form-control" name="registerend" type="datetime-local" value="<%= registerEnd %>" data-required="Register end is required" />
                </div>
                <div class="text-center">
                    <ul class="error-message">
                        <% if(typeof registrationSettingsError !== "undefined"){ %>
                            <% registrationSettingsError.forEach(error => { %>
                                <li><font color="red"><%= error %></font></li>
                            <% }) %>
                        <% } %>
                    </ul>
                    <button type="submit" class="btn btn-success" style="width: 50%">Update settings</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(() => {
    $("#username").focus();
});
</script>

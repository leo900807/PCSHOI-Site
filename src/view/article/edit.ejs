<% layout("layout/application.ejs") -%>

<div class="col-12 col-sm-12 col-md-12 col-lg-8 mx-auto">
    <div class="card">
        <div class="card-body mt-3 mb-3 ms-5 me-5">
            <div class="page-header mb-4 text-center">
                <h4 class="fw-bold">Edit article</h4>
            </div>
            <form method="post" data-method="patch" action="/articles/<%= id %>" onsubmit="return checkForm();">
                <%- partial("_form.ejs") %>
                <ul class="error-message">
                    <% if(typeof editArticleError !== "undefined"){ %>
                        <% editArticleError.forEach(error => { %>
                            <li><font color="red"><%= error %></font></li>
                        <% }) %>
                    <% } %>
                </ul>
                <button type="submit" class="btn btn-success mb-2">Update</button><br>
            </form>
            <a href="/articles/<%= id %>" class="btn btn-sm btn-secondary">Back</a>
        </div>
    </div>
</div>

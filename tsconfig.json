{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/custom.d.ts"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": [
        "./node_modules/**/*"
    ]
}
